{# src/HomeBundle/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}Les Jardins d'Openclassrooms{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        {# <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">#}
        <link rel="stylesheet" href="{{ asset('bundles/home/css/style.css') }}" type="text/css" media="all" />
        {# On charge le CSS de bootstrap depuis le site directement #}

    {% endblock %}
</head>

<body>
    {% block header %}
    {% endblock %}

    {% block body %}
        <!-- ******************AFFICHAGE DES MESSAGES FLASHS ********************-->
        <section>
            {# On affiche tous les messages flash dont le nom est info #}
            {% for message in app.session.flashbag.get('info') %}
                <div class="alert alert-info">
                    <span>{{ message }} </span>
                </div>
            {% endfor %}
        </section>
    {% endblock %}

    {% block footer %}
    {% endblock %}
</body>
</html>