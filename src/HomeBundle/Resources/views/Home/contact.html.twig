{# src/HomeBundle/Resources/views/Default/contact.html.twig #}

<!-- ******************SECTION 4 : CONTACTEZ NOUS ********************-->
<section>
    <div class="bloc_titre_menu4">
        <h1 id="contact">Contactez nous</h1>
        <div class="icones_menu4">
            <a href=""> <img src="{{ asset('bundles/home/images/facebookB2.png') }}" alt=""/>
                facebook </a>
            <a href=""> <img src="{{ asset('bundles/home/images/twitterB.png') }}" alt=""/>
                twitter  </a>
        </div>
    </div>

    <div class="formulaire">
        <h4>CONTACT</h4>
        <h5>Remplissez le formulaire afin de prendre contact</h5>

        <div class="bloc_formulaire">
            <div class="texte_formulaire">
                <p>Société Les Jardins d'OpenClassrooms</p>
                <p>Adresse du siège social</p>
                <p>Tour Alpha Gamma</p>
                <p>26 Boulevard Haussmann</p>
                <p>75002 PARIS</p>
                <p>tel : (+33)1 25 65 85 94</p>
                <p>mail : contact@jardinsoc.com</p>
            </div>

            <!-- formulaire -->
            <div class="well">
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}},
                {'action': path('/home')}) }}

                {# Les erreurs générales du formulaire. #}
                {{ form_errors(form) }}

                <div class="form-group">
                    {{ form_label(form.nom, "Votre nom :") }}
                    {{ form_errors(form.nom) }}
                    <div class="col-sm-10">
                        {# Génération de l'input. #}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.email, "Votre email :") }}
                    {{ form_errors(form.email) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.message, "Votre message :") }}
                    {{ form_errors(form.message) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.message, {'attr': {'class': 'form-control', 'rows' : "5", 'cols' : "70"}}) }}
                    </div>
                </div>
                {{ form_widget(form.envoyer, {'attr': {'class': 'btn btn-primary'}}) }}
                {{ form_rest(form) }}
                {# Fermeture de la balise <form> du formulaire HTML #}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</section>